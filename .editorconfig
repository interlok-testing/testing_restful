# Editor Config
root = true

# All
[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown uses whitespace for formatting
[*.md]
trim_trailing_whitespace = false

# 4 space files
[*.{html,ejs,css,scss}]
indent_size = 4

[adapter.xml]
insert_final_newline = false

[config-project.json]
insert_final_newline = false
